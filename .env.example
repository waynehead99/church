# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=production  # Set to 'development' for local development
SECRET_KEY=your-secret-key-here  # Generate a strong secret key for production

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/church_db

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Security Configuration
SESSION_COOKIE_SECURE=True
REMEMBER_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
REMEMBER_COOKIE_HTTPONLY=True

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://localhost:6379
RATELIMIT_STRATEGY=fixed-window
RATELIMIT_DEFAULT=200 per day

# Error Tracking
SENTRY_DSN=your-sentry-dsn

# Application Settings
MAX_CONTENT_LENGTH=16777216  # 16MB max-upload
UPLOAD_FOLDER=/path/to/upload/directory
ALLOWED_EXTENSIONS=pdf,doc,docx,jpg,jpeg,png

# Backup Configuration
BACKUP_DIRECTORY=/path/to/backup/directory
BACKUP_RETENTION_DAYS=30
